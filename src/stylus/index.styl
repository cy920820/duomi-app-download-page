body {
  text-align: center;
}

.wrapper {
  height: 100%;
  box-sizing: border-box;
  padding: 30px 15px;
  background: url('../images/bg.png') no-repeat;
  background-size: 100%;
}

.logo {
  width: 175px;
}

img {
  border: none;
  vertical-align: middle
}

header {
  overflow: hidden;
  margin-bottom: 16px
}

header img {
  width: 100%
}

.video-wrap .iframe-wrapper {
  min-height: 4rem;  
}

.video-wrap iframe {
  width: 6.5rem;
  height: 4rem;
  margin: 0 auto
}

.video-title {
  margin-top: .4rem;
  margin-bottom: .5rem;
  font-size: .36rem;
  color: #fff;
  text-align: center;
}

.cont {
  padding: .2rem .1rem 0;
}

.cont .code-wrap {
  display: flex;
  width: 100%;
  height: .8rem;
  line-height: .8rem;
  margin-top: .4rem;
  overflow: hidden;
  border: 1px solid #ffa819;
  border-radius: 1rem;
  font-size: .4rem
}

.cont .code-wrap span {
  flex: 1;
  background: #fff;
  color: #333;
  font-size: 16px;
  font-weight: 800;
}

.cont .code-wrap a {
  width: 2.4rem;
  background: #ffce00;
  color: #333;
  font-size: 14px;
}

.cont .tip {
  margin: .4rem 0 .5rem;
  line-height: .85rem;
  font-size: 17px;
  color: #fff;
}

.cont .btn-wrap {
  margin-bottom: .45rem;
}

.cont .btn-wrap a {
  display: block;
  width: 100%;
  height: .8rem;
  line-height: .8rem;
  background: #ffce00;
  border-radius: 1.2rem;
  box-shadow: 0 4px 6px 0 rgba(245, 166, 35, .4);
  font-size: 14px;
  color: #333;
  font-weight: 800;
  text-align: center;

  .gt {
    display: inline-block;
    margin-left: 3px;
  }
}

footer {
  position: relative;
  width: 100%;
  margin: 3rem 0 1rem
}

footer img {
  height: 2.3rem;
}

#fixed {
  position: fixed;
  top: 40%;
  left: 50%;
  transition: all .3s;
  transform: translateX(-50%);
  padding: 8px 20px;
  color: #fff;
  background: rgba(0, 0, 0, .8);
  border-radius: 5px;
  font-size: 15px;
  line-height: 22px;
}
